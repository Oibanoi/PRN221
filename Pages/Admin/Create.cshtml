@page
@model SignalRAssignment.Pages.Admin.CreateModel
@{
}
<div class="container">
    <h1>Create a New Pizza</h1>
    <form method="post">
      <div class="form-group">
        <label for="pizzaName">Name</label>
        <input type="text" class="form-control" id="pizzaName" placeholder="Enter pizza name" asp-for="@Model.product.ProductName">
      </div>
      <div class="form-group">
        <label for="pizzaPrice">Price</label>
        <input type="number" step="0.01" class="form-control" id="pizzaPrice" placeholder="Enter pizza price"asp-for="@Model.product.UnitPrice">
      </div>
      <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input type="text" class="form-control" id="imageUrl" placeholder="Enter image URL"asp-for="@Model.product.ProductImage">
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category" asp-for="@Model.product.CategoryID">
          @foreach(var category in Model.Categories)
                {
                    <option value="@category.CategoryID">@category.CategoryName</option>
                }
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
